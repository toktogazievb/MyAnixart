<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Material.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="Image.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>